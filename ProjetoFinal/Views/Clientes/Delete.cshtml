@model ProjetoFinal.Models.Cliente

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="display-4">Deletar</h1>
<hr />
<h3>Você tem certeza que deseja deletar este cliente?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dataNasci)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataNasci)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <br />
        <br />
        <a class="btn btn-secondary" asp-action="Index">Volar página</a>
    </form>
</div>
